    <!-- explicit list view definition -->
  
   
      
    <record model="ir.ui.view" id="serialnumbers_list">
      <field name="name">serialnumbers list</field>
      <field name="model">zadara_inventory.serialnumbers</field>
      <field name="arch" type="xml">
          <tree>
        <field name="product_"/>    
        <field name="inventory_"/>
        <field name="serialnumber"/>
      
          </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="serialnumbers_action_window">
      <field name="name">locations window</field>
      <field name="res_model">zadara_inventory.serialnumbers</field>
      <field name="view_mode">tree,form</field>
    </record>


