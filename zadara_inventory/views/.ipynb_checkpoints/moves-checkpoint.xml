<odoo>
  <data>
    <!-- explicit list view definition -->

      
          <record model="zadara_inventory.moves" id="model_moves">
        <field name="name"></field>      
          <field name="location_source"/>
          <field name="location_destination"/>
            <field name="transaction_id"/>
            <field name="tracking_number"/>
  
      </record>
      
    <record model="ir.ui.view" id="moves_list">
      <field name="name">moves list</field>
      <field name="model">zadara_inventory.moves</field>
      <field name="arch" type="xml">
        <tree>
           <field name="name"/>      
          <field name="location_source"/>
          <field name="location_destination"/>
            <field name="transaction_id"/>
            <field name="tracking_number"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="moves_action_window">
      <field name="name">moves window</field>
      <field name="res_model">zadara_inventory.moves</field>
      <field name="view_mode">tree,form</field>
    </record>


