<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="zadara_inventory.product" id="model_product">
        <field name="name"></field>      
          <field name="product_id"/>
          <field name="part_number"/>
            <field name="product_category"/>
            <field name="product_grab"/>
            <field name="product_trackSerialNumber"/>
      </record>

      
    <record model="ir.ui.view" id="product_list">
      <field name="name">product list</field>
      <field name="model">zadara_inventory.product</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="product_id"/>
          <field name="part_number"/>
            <field name="product_category"/>
            <field name="product_grab"/>
            <field name="product_trackSerialNumber"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="product_action_window">
      <field name="name">product window</field>
      <field name="res_model">zadara_inventory.product</field>
      <field name="view_mode">tree,form</field>
    </record>


